<div class="container" id="checkout-page">
	<h2>Shopping cart</h2>
	<div class="well">
		<div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Model</th>
            <th>Quantity</th>
            <th>Price / Case</th>
            <th>Total</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
            	<td><%= link_to order.id, edit_order_path(order) %></td>
            	<td><%= order.model %></td>
            	<td><%= order.quantity %></td>
            	<td><%= number_to_currency(order.price, options = {format: "%u%n", precision: 0}) %></td>
            	<td><%= number_to_currency(order.quantity * order.price, options = {format: "%u%n", precision: 0})  %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
	</div>
	<h4 style="text-align:right">Total: <%= number_to_currency(@cart_total, options = {format: "%u%n", precision: 2}) %><br><br>
	<form action="/charge" method="POST">
	  <script
	    src="https://checkout.stripe.com/checkout.js"
	    class="stripe-button"
	    data-key="pk_test_6pRNASCoBOKtIshFeQd4XMUh"
	    data-image="http://tctechcrunch2011.files.wordpress.com/2014/03/moneument-valley2.png?w=738"
	    data-name="Monument Valley"
	    data-description='CaseHappy (<%= @cart_total%>)'
	    data-amount="<%= @cart_total * 100 %>"
	    data-shipping-address="true">
	  </script>
	</form></h4>
	
</div>

<p id="notice"><%= notice %></p>


